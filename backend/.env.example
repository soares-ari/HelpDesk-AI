# ============================================
# Helpdesk AI - Environment Variables Template
# ============================================
# Copy this file to .env and fill with your actual values

# Database
DB_HOST=localhost
DB_PORT=5433
DB_NAME=helpdesk_ai
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# OpenAI API
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# JWT Secret (512 bits minimum - use cryptographically secure random)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_secure_random_jwt_secret_here_at_least_64_chars

# Server
PORT=8080

# Spring Profile (dev, prod, test)
SPRING_PROFILES_ACTIVE=dev
